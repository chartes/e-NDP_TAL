MAINTAINER "sergio.torres@chartes.psl.eu"
INFO "endp"
NAME "e-NDP Notre-Dame de Paris et son cloitre"
PATH endp
ENCODING "UTF-8"
LANGUAGE "Latin"
SUBCDEF   '/corpora/endp/subcorpora/subcorps'
SUBCORPATTRS "doc.volume|doc.folio|doc.date|doc.sujet"
SHORTREF "=doc.id" 

PATH   '/corpora/endp/indexed/'
VERTICAL  '/corpora/endp/vertical/source'


IINFOHREF "XXX"
TAGSETDOC "https://glossaria.eu/lemmatisation/#page-content"

FULLREF "doc.volume,doc.folio,doc.date,doc.sujet,doc.link,doc.id"

ATTRIBUTE   word
ATTRIBUTE   tag
ATTRIBUTE   lemma
ATTRIBUTE   region

ATTRIBUTE   lc {
	LABEL	"word (lowercase)"
	DYNAMIC  utf8lowercase
	DYNLIB   internal
	ARG1     "C"
	FUNTYPE  s
	FROMATTR word
	TYPE     index
	TRANSQUERY	yes
}

ATTRIBUTE   lemma_lc {
	LABEL	"lemma (lowercase)"
	DYNAMIC  utf8lowercase
	DYNLIB   internal
	ARG1     "C"
	FUNTYPE  s
	FROMATTR lemma
	TYPE     index
	TRANSQUERY	yes
}


STRUCTURE   doc {
   ATTRIBUTE sujet {
      MULTIVALUE "1"
      MULTISEP ","
      HIERARCHICAL "::"
   }
   ATTRIBUTE date {
      MULTIVALUE "1"
      MULTISEP ","
      HIERARCHICAL "::"
   }
   ATTRIBUTE link {
		URLTEMPLATE "%s"
		MEDIATYPE "image"
   }
   ATTRIBUTE volume
   ATTRIBUTE folio
   ATTRIBUTE id
}



STRUCTURE g {
	ATTRIBUTE zone
	   DISPLAYTAG 0
	   DISPLAYBEGIN " |%(zone) ==> "
	   DISPLAYEND " | "
}

STRUCTURE s {
	ATTRIBUTE img
	URLTEMPLATE "%s"
		MEDIATYPE "image"
}

